Algoritmo areadeuntriangulo
	
	//Definicion de datos
	Definir base Como Real
	Definir altura Como Real
	
	//Datos de entrada
	Escribir "Ingrese valor de la base"
	Leer base;
	Escribir "Ingrese valor de la altura"
	Leer altura;
	
	//Proceso
	area = base * altura / 2
	
	//Datos de salida
	Escribir "El area de tu triangulo es igual a: ", area;
	
FinAlgoritmo